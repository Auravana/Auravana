<!DOCTYPE html>
<html ng-app="issueEntry">
<head>
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/IssueEntry.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.2/underscore-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.min.js"></script>
    <script src="~/Scripts/IssueEntry.js"></script>
    <meta charset=utf-8 />
    <title>Issue Entry</title>
</head>
<body>
    <header>
        <h1>Issue Entry</h1>
    </header>
    <div id="tableContainer" ng-controller="issueCtrl">
        <div id="tableRow1">
            <section id="selected" class="columns">
                <header>
                    <h2 class="columnHeader">Issue Selections</h2>
                </header>
                <div class="selectedLine" ng-repeat="item in selectedItems">
                    <span class="name">{{item.options.optionsName}}</span>
                    <span class="value">{{item.choice.name}}</span>
                    <span class="remove" ng-click="removeSelection(item, $index)"><i class="icon-remove"></i></span>
                </div>
            </section>
            <section id="options" class="columns">
                <header>
                    <h2 class="columnHeader">{{currentOptions.optionsName}}</h2>
                </header>
                <div ng-repeat="item in currentOptions.items"
                     ng-class="item.color"
                     ng-click="selectOption(currentOptions, item)"
                     class="optionLine">
                    {{item.name}}
                </div>
            </section>
        </div>
    </div>
</body>
</html>
